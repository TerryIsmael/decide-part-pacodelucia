    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "python": "${workspaceFolder}/../egcenv/bin/python3.10"
        },
        {
            "name": "Debug runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/decide/manage.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/decide/",
            "python": "${workspaceFolder}/../egcenv/bin/python3.10",
            "args": [
                "runserver"
            ],
            "justMyCode": false
        },
        {
            "name": "Debug census tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/decide/manage.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/decide/",
            "python": "${workspaceFolder}/../egcenv/bin/python3.10",
            "args": [
                "test",
                "census"
            ]
        }
    ]
}